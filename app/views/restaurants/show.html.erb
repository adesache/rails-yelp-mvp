<div class="container">

  <h1> <%= @restaurant.name %></h1>

  <div>
    <p> Address: <%= @restaurant.address %></p>
  </div>
  <div>
    <p> Phone: <%= @restaurant.phone_number %></p>
  </div>
  <div>
    <p> Category: <%= @restaurant.category %></p>
  </div>

  <div>
    <h4>Reviews</h4>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= '⭐️' * review.rating %> <br> <%= review.content %>  </li>
        <% end %>
      </ul>
 </div>

  <div>
    <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
  </div>

  <%= link_to '↩️ Back to restaurants list', restaurants_path %>
</div>
